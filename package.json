{
  "name": "airgen-starter",
  "private": true,
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "build": "pnpm -C packages/req-qa build && pnpm -C backend build",
    "dev": "pnpm -C backend dev",
    "test": "pnpm run -r test",
    "prepare": "husky"
  },
  "lint-staged": {
    "backend/src/**/*.ts": [
      "pnpm -C backend lint:fix",
      "git add"
    ],
    "frontend/src/**/*.{ts,tsx}": [
      "pnpm -C frontend lint:fix",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3"
  }
}
