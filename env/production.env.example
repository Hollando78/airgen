# Production environment variables for docker compose
ACME_EMAIL=admin@example.com

# Traefik auth (generate real credentials before deploying)
TRAEFIK_BASIC_AUTH_USERS=admin:$apr1$example$use-real-hash

# Database
POSTGRES_USER=airgen_user
POSTGRES_PASSWORD=change_this_strong_password
POSTGRES_DB=airgen_db

# Redis
REDIS_PORT=6379

# Neo4j Graph Database
GRAPH_USERNAME=neo4j
GRAPH_PASSWORD=change_this_strong_password
GRAPH_DATABASE=neo4j
GRAPH_ENCRYPTED=false
GRAPH_BOLT_PORT=7687
GRAPH_HTTP_PORT=7474

# API configuration
API_HOST=0.0.0.0
API_PORT=8787
API_JWT_SECRET=replace_with_secure_secret
API_ENV=production

# AI Configuration
AI_DRAFT_LIMIT=5
AI_DRAFT_CACHE_TTL=900

# LLM Configuration
LLM_PROVIDER=openai
LLM_API_KEY=
LLM_MODEL=gpt-4o-mini
LLM_BASE_URL=
LLM_TEMPERATURE=0.2
